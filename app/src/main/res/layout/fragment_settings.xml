<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMaterial"
    android:orientation="vertical">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/settingsDarkTheme"
        style="@style/Widget.MaterialComponents.CompoundButton.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Tema oscuro"
        android:textColor="@color/inverted100"
        android:textSize="20sp"
        app:switchPadding="20dp"
        app:thumbTint="@color/secondary" />

    <LinearLayout style="@style/Divider"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/settingsReportesInBackground"
        style="@style/Widget.MaterialComponents.CompoundButton.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Envio de reportes en segundo plano"
        android:textColor="@color/inverted100"
        android:textSize="20sp"
        app:switchPadding="20dp"
        app:thumbTint="@color/secondary" />

</androidx.appcompat.widget.LinearLayoutCompat>