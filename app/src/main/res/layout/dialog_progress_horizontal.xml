<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundMaterial"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="15dp"
    android:paddingEnd="30dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor espere..."
        android:textAlignment="textStart"
        android:textColor="@color/inverted100"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="Enviando..."
        android:textAlignment="textStart"
        android:textColor="@color/inverted100"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/dialog_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:progress="50"
        android:progressTint="@color/secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/dialog_progress_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="50%"
            android:textAlignment="textStart"
            android:textColor="@color/inverted50"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_progress_numeric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="50/100"
            android:textAlignment="textEnd"
            android:textColor="@color/inverted50"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>