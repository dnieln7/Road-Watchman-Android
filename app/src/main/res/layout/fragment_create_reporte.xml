<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMaterial"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Toma o selecciona una foto..."
        android:textColor="@color/textColor100"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/selectedPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/reportes" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectPicture"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text=" Selecciona"
        android:textColor="@color/colorPrimary"
        app:icon="@drawable/add_from_gallery"
        app:iconTint="@color/colorPrimary"
        app:strokeColor="@color/colorPrimary" />

</androidx.appcompat.widget.LinearLayoutCompat>